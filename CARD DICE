    private static void dicegame() 
    {
    	Scanner keyboard = new Scanner(System.in);
    	
    	System.out.print("Enter the dice you want to roll: ");
        int totaldice = keyboard.nextInt();     
        System.out.print("Enter your guessing: ");
        int guess = keyboard.nextInt();
        int totalroll = 0;       
        for(int counter = 1; counter <= totaldice; counter++)
        {
        	Random randomNumbers = new Random();
            int roll = randomNumbers.nextInt(6)+1;
            totalroll =+ roll;
        }
        if(guess == totalroll)
        {
        	System.out.println("Lucky you!");
        }
        else 
        {
        	System.out.println("Bad Lucky!");
        }
	}
